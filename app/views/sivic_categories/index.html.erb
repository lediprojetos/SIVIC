<% content_for :titlePage do %>
  Lista de Categorias
<% end %>

<%=render '/layouts/panel' %>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome Categoria</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sivic_categories.each do |sivic_category| %>
      <tr>
        <td><%= sivic_category.nome_categoria %></td>

        <td align='right'>   
          <%= link_to sivic_category, :class => "btn btn-default btn-sm", :rel=>"tooltip", :title=>"Exibir" do %>
            <span class="glyphicon glyphicon-list-alt"></span>
          <% end %>             
          <%= link_to edit_sivic_category_path(sivic_category), :class => "btn btn-default btn-sm", :rel=>"tooltip", :title=>"Editar" do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          
           <a class="btn btn-default btn-sm" title="" rel="tooltip" href="/sivic_categories/<%=sivic_category.id%>"    
               data-method="delete" data-confirm=" Deseja excluir o registro?" data-original-title="Excluir">
                <span class="glyphicon glyphicon-trash" rel="tooltip"></span>
            </a>       
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div></div>
<div class="btn-group">
  <%= link_to new_sivic_category_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-file"></span> Novo
  <% end %>
</div>


<script>

$(function(){
  $("a[rel='tooltip']").tooltip();
})

</script>
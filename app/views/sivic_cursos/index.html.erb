<% content_for :titlePage do %>
  Lista de Cursos
<% end %>

<%=render '/layouts/panel' %>

<table  class="table table-hover">
  <thead>
    <tr>
      <th>Nome curso</th>
    </tr>
  </thead>

  <tbody>
    <% @sivic_cursos.each do |sivic_curso| %>
      <tr>
        <td><%= sivic_curso.nome_curso %></td>

         <td align='right'>   
          <%= link_to sivic_curso, :class => "btn btn-default btn-sm", :rel=>"tooltip", :title=>"Exibir" do %>
            <span class="glyphicon glyphicon-list-alt"></span>
          <% end %>             
          <%= link_to edit_sivic_curso_path(sivic_curso), :class => "btn btn-default btn-sm", :rel=>"tooltip", :title=>"Editar" do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          
           <a class="btn btn-default btn-sm" title="" rel="tooltip" href="/sivic_cursos/<%=sivic_curso.id%>"    
               data-method="delete" data-confirm=" Deseja excluir o registro?" data-original-title="Excluir">
                <span class="glyphicon glyphicon-trash" rel="tooltip"></span>
            </a>       
        </td>

      </tr>
    <% end %>
  </tbody>
</table>


</div></div>
<div class="btn-group">
  <%= link_to new_sivic_curso_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-file"></span> Novo
  <% end %>
</div>




<script>

$(function(){
  $("a[rel='tooltip']").tooltip();
})

</script>
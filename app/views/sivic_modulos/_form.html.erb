
<%= form_for(@sivic_modulo) do |f| %>
  <% if @sivic_modulo.errors.any? %>
  
    <div class="alert alert-danger alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>

      <% if @sivic_modulo.errors.any? %>

          <% @sivic_modulo.errors.full_messages.each do |msg| %>

        <%= msg %></br>
      <% end %>
    <% end %>
    </div>
  <% end %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= 'Cadastro de Módulos'%></h3>
  </div>
  <div class="panel-footer">

  <div class="row mar-bot40">
    <div class="col-lg-4" >
    </div>
    <div class="col-lg-4">
      <%= f.label :Nome_do_Módulo %><br>
      <%= f.text_field :nome_modulo, :class =>  'form-control' %>
    </div>
  </div>
  <div class="row mar-bot40">
    <div class="col-lg-4" >
    </div>  
    <div class="col-lg-4">
      <%= f.label :Descrição_do_Módulo %><br>
      <%= f.text_field :desc_modulo, :class =>  'form-control' %>
    </div>
    <%#= f.label :data_bloqueio %>
    <%#= f.datetime_select :data_bloqueio %>
  </div>
  </div>
  </div>

<div class="btn-group">

  <button type="submit" class="btn btn-default btn">
    <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
  </button>

  <%= yield(:iconexibir) %>

  <%= link_to sivic_modulos_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>

</div>
<% end %>

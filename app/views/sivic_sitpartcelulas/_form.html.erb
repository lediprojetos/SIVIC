<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= 'Cadastro de Situação Participante Célula'%></h3>
  </div>
  <div class="panel-footer">
    
  <%= form_for(@sivic_sitpartcelula) do |f| %>
    <% if @sivic_sitpartcelula.errors.any? %>
    
      <div class="alert alert-danger alert-dismissible fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>

        <% if @sivic_sitpartcelula.errors.any? %>
  
            <% @sivic_sitpartcelula.errors.full_messages.each do |msg| %>

          <%= msg %></br>
        <% end %>
      <% end %>
      </div>
    <% end %>


  <div class="row">
    <div class="col-xs-4">
    </div>
    <div class="col-xs-4">
      <%= f.label :Situação %><br>
      <%= f.text_field :DESC_situacao, :class => 'form-control' %>
    </div>
 </div>
 
 <!--Capturando igreja do usuaário logado -->
    <%= f.hidden_field :sivic_igreja_id, :value => current_user.sivic_pessoa.sivic_igreja_id %>
   
<br>


</div>
</div>

<div class="btn-group">
  <button type="submit" class="btn btn-default btn">
    <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
  </button>

  <%= yield(:iconexibir) %>

  <%= link_to sivic_sitpartcelulas_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>
</div>

<% end %>


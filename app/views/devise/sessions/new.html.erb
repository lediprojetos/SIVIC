<div style='width:250px; margin-left:50%; position:relative; left: -125px;'>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Login</h3>
    </div>
    <div class="panel-body">
            <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
              <%= f.label :email %>
              <%= f.email_field :email, :autofocus => true, :class => 'form-control-2' %>
              <%= f.label :Senha %>
              <%= f.password_field :password, :class => 'form-control-2' %>
              <% if devise_mapping.rememberable? -%>
                <div class="checkbox">
                  <%= f.check_box :remember_me %>
                	<%= f.label :Lembrar_Senha %>
            	   </div>
              <% end -%>
              <br />
              <%= f.submit "Fazer Login" , class: "btn btn-mediun btn-primary"%>
              <% end %>
      <%#= render "devise/shared/links" %>
      </div>
    </div> 
  </div> 
</div>


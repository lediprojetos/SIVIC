  <%= form_for(@sivic_model) do |f| %>
    <% if @sivic_model.errors.any? %>
     <div class="alert alert-danger alert-dismissible fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <% if @sivic_model.errors.any? %>
  
            <% @sivic_model.errors.full_messages.each do |msg| %>

          <%= msg %></br>
        <% end %>
      <% end %>
      </div>
    <% end %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= 'Cadastro de Models'%></h3>
  </div>
  <div class="panel-footer">

  <div class="row mar-bot40">
    <div class="col-lg-4" >
    </div>
    <div class="col-lg-4" >
      <%= f.label :Nome_Model %><br>
      <%= f.text_field :nome_model, :class => 'form-control' %>
    </div>
  </div>
  <div class="row mar-bot40">
    <div class="col-lg-4" >
    </div>  
    <div class="col-lg-4" >
      <%= f.label :Descrição%><br>
      <%= f.text_field :desc_model, :class => 'form-control' %>
    </div>
    <%#= f.label :data_bloqueio %>
    <%#= f.datetime_select :data_bloqueio %>
  </div>  
  <div class="row mar-bot40">
    <div class="col-lg-4" >
    </div>
  
      <div class="col-lg-4" >
        <%= f.label :Módulo%><br>
        <%= f.select :sivic_modulo_id, options_from_collection_for_select(SivicModulo.all, 'id', 'nome_modulo',@sivic_model.sivic_modulo_id), {}, {:class =>  'form-control'}%>
      </div>

    <%#= f.label :data_bloqueio %>
    <%#= f.datetime_select :data_bloqueio %>
  </div>
</div>
</div>

<div class="btn-group">

  <button type="submit" class="btn btn-default btn">
    <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
  </button>

  <%= yield(:iconexibir) %>

  <%= link_to sivic_models_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>

</div>
<% end %>

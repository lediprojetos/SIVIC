    </div>
      
        <!--Capturando igreja do usuaÃ¡rio logado -->
      <%= f.hidden_field :sivic_igreja_id, :value => current_user.sivic_pessoa.sivic_igreja.id %>
</br>
  </div>
</div>

    <div class="btn-group">

      <button type="submit" class="btn btn-default btn">
        <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
      </button>

      <%= yield(:iconexibir) %>

      <%= link_to sivic_tipo_eventos_path, :class => "btn btn-default" do %>

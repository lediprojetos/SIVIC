<% content_for :titlePage do %>
  Lista de Tipos de Eventos
<% end %>

<%=render '/layouts/panel' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Tipo Evento</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sivic_tipo_eventos.each do |sivic_tipo_evento| %>
      <tr>
        <td><%= sivic_tipo_evento.desc_tipoevento %></td>

        <td align='right'>

            <%= link_to sivic_tipo_evento, :class => "btn btn-default btn-sm", :rel=>"tooltip", :title=>"Exibir"  do %>
              <span class="glyphicon glyphicon-list-alt"></span>
            <% end %>             
            <%= link_to edit_sivic_tipo_evento_path(sivic_tipo_evento), :class => "btn btn-default btn-sm", :rel=>"tooltip", :title=>"Editar"  do %>
              <span class="glyphicon glyphicon-pencil"></span>
            <% end %>             
          
            <a class="btn btn-default btn-sm" title="" rel="tooltip" href="/sivic_tipo_eventos/<%=sivic_tipo_evento.id%>"     data-method="delete" data-confirm=" Deseja excluir o registro?" data-original-title="Excluir">
                <span class="glyphicon glyphicon-trash" rel="tooltip"></span>
            </a>
          
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<div class="apple_pagination">
<%= will_paginate @sivic_tipo_eventos %>
</div>

</div></div>
<div class="btn-group">
  <%= link_to new_sivic_tipo_evento_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-file"></span> Novo
  <% end %>
</div>

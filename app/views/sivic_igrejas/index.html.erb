<h1>Lista das Igrejas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome </th>
      <th>Telefône</th>
      <th>Nome responsável</th>
      <th>Cnpj</th>
      <th>Sivic endereco</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sivic_igrejas.each do |sivic_igreja| %>
      <tr>
        <td><%= sivic_igreja.NOME_igreja %></td>
        <td><%= sivic_igreja.NUMR_telefone %></td>
        <td><%= sivic_igreja.NOME_responsavel %></td>
        <td><%= sivic_igreja.NUMR_cnpj %></td>
        <td><%= sivic_igreja.sivic_endereco %></td>
        <td><%= link_to 'Show', sivic_igreja %></td>
        <td><%= link_to 'Edit', edit_sivic_igreja_path(sivic_igreja) %></td>
        <td><%= link_to 'Destroy', sivic_igreja, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


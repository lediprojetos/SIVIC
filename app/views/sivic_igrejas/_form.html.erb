<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= 'Cadastro de  Igrejas'%></h3>
  </div>
  <div class="panel-footer">

<%= form_for(@sivic_igreja) do |f| %>

<p id="notice"><%= notice %></p>


<% content_for :titlePage do %>
  Exibir Igreja
<% end %>

<%= render 'layouts/panel' %>


<legend>Dados Principais</legend>
<p>
  <strong>Igreja Sede:</strong>
  <% @sede = SivicIgreja.find_by_id(@sivic_igreja.father_id) %>
  <% if @sede != nil %>
    <%= SivicIgreja.find_by_id(@sivic_igreja.father_id).NOME_igreja%>
  <%else%>
      <%= nil%>
  <%end%>

</p>

<p>
  <strong>Nome igreja:</strong>
  <%= @sivic_igreja.NOME_igreja %>
</p>

<p>
  <strong>Telefone:</strong>
  <%= @sivic_igreja.NUMR_telefone %>
</p>

<p>
  <strong>Nome do Eesponsavel:</strong>
  <%= @sivic_igreja.NOME_responsavel %>
</p>

<p>
  <strong>CNPJ:</strong>
  <%= @sivic_igreja.NUMR_cnpj %>
</p>

<legend>Endereço</legend>

<p>
  <strong>Bairro:</strong>
  <%= @sivic_igreja.sivic_endereco.DESC_Bairro %>
</p>

<p>
  <strong>Rua:</strong>
  <%= @sivic_igreja.sivic_endereco.DESC_Rua %>
</p>

<p>
  <strong>Complemento:</strong>
  <%= @sivic_igreja.sivic_endereco.DESC_Complemento %>
</p>

<p>
  <strong>Ponto de Referência:</strong>
  <%= @sivic_igreja.sivic_endereco.DESC_Pontoreferencia %>
</p>

<p>
  <strong>CEP:</strong>
  <%= @sivic_igreja.sivic_endereco.NUMR_Cep %>
</p>

<p>
  <strong>Cidade:</strong>
  <%= @sivic_igreja.sivic_endereco.sivic_cidade.nome_cidade %>
</p>

<p>
  <strong>Estado:</strong>
  <%= @sivic_igreja.sivic_endereco.sivic_cidade.sivic_estado.nome_estado %>
</p>

</div></div>

<div class="btn-group">

  <%= link_to edit_sivic_igreja_path(@sivic_igreja), :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-pencil"></span> Editar
  <% end %>


  <%= link_to sivic_igrejas_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>

</div>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= 'Cadastro de Redes'%></h3>
  </div>
  <div class="panel-footer">

  <%= form_for(@sivic_rede) do |f| %>
    <% if @sivic_rede.errors.any? %>
    
      <div class="alert alert-danger alert-dismissible fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>

        <% if @sivic_rede.errors.any? %>
  
            <% @sivic_rede.errors.full_messages.each do |msg| %>

          <%= msg %></br>
        <% end %>
      <% end %>
      </div>
    <% end %>


  <div class="row">
    <div class="col-xs-3">
    </div>
    <div class="col-xs-6">
      <%= f.label :Rede,  :class => 'lblForms' %>
      <%= f.text_field :nome_rede, :class => 'form-control' %>
      
      <%if current_user.sivic_pessoa.sivic_igreja_id%>
        <%= f.hidden_field :sivic_igreja_id, :value => current_user.sivic_pessoa.sivic_igreja_id%>
      <%else%>
        <%= f.label :Igreja, :class => 'lblForms'  %>
        <%= f.select :sivic_igreja_id, options_from_collection_for_select(SivicIgreja.all, 'id', 'NOME_igreja'),:include_blank => true%>
      <%end%>
      <%=f.hidden_field :User_id, :value => current_user.id%>
    </div>
  </div>

</br>


  </div>            
</div>

<div class="btn-group">

  <button type="submit" class="btn btn-default btn">
    <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
  </button>

  <%= yield(:iconexibir) %>

  <%= link_to sivic_redes_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>

</div>
<% end %>

<%if notice %>
  <div class="alert alert-success alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
     <%= notice %>
</div>
<%end%>

<% content_for :titlePage do %>
  Exibir Célula
<% end %>

<%= render 'layouts/panel' %>

<legend>Dados Principais</legend>

<p>
  <strong>Lider:</strong>
  <%= @sivic_celula.sivic_pessoa.nome_pessoa %>
</p>

<p>
  <strong>Dia:</strong>
  <%= @sivic_celula.NUMR_Dia %>
</p>

<p>
  <strong>Data bloqueio:</strong>
  <%= @sivic_celula.DATA_Bloqueio %>
</p>

<p>
<strong>Gerar Relatório:</strong>
  <% if @sivic_celula.flag_gerarelatorio == true %>
         Sim
      <% else %>
         Não    
    <% end %>
</p>

<legend>Endereço</legend>

<p>
  <strong>Bairro:</strong>
  <%= @sivic_celula.sivic_endereco.DESC_Bairro %>
</p>

<p>
  <strong>Rua:</strong>
  <%= @sivic_celula.sivic_endereco.DESC_Rua %>
</p>

<p>
  <strong>Complemento:</strong>
  <%= @sivic_celula.sivic_endereco.DESC_Complemento %>
</p>

<p>
  <strong>Ponto de Referência:</strong>
  <%= @sivic_celula.sivic_endereco.DESC_Pontoreferencia %>
</p>

<p>
  <strong>CEP:</strong>
  <%= @sivic_celula.sivic_endereco.NUMR_Cep %>
</p>

<p>
  <strong>Cidade:</strong>
  <%= @sivic_celula.sivic_endereco.sivic_cidade.nome_cidade %>
</p>

<p>
  <strong>Estado:</strong>
  <%= @sivic_celula.sivic_endereco.sivic_cidade.sivic_estado.nome_estado %>
</p>

</div></div>

<div class="btn-group">

  <%= link_to edit_sivic_celula_path(@sivic_celula), :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-pencil"></span> Editar
  <% end %>

  <%= link_to sivic_celula_path(format: 'pdf'), {:class => "btn btn-default", :target => '_blank'} do %>
    <span class="glyphicon glyphicon-print  "></span> PDF
  <% end %>


  <%= link_to sivic_celulas_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>

</div>
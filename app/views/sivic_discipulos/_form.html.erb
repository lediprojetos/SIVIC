<%= form_for(@sivic_discipulo) do |f| %>
  <% if @sivic_discipulo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sivic_discipulo.errors.count, "error") %> prohibited this sivic_discipulo from being saved:</h2>

      <ul>

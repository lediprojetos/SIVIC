<% content_for :titlePage do %>
  Listar Usuários
<% end %>


<%=render '/layouts/panel' %>

<%= form_tag nil, method: 'GET' do %>
  <label >Nome</label><br>
  <div class="row">
    <div class="col-lg-12">
      <div class="input-group">
        <input id="q" name="q" type="text" class="form-control" placeholder="Nome">
        <span class="input-group-btn">
          <button class="btn btn-success" type="submit" >Buscar</button>
        </span>
      </div><!-- /input-group -->
    </div><!-- /.col-lg-6 -->
  </div><!-- /.row -->
  <br />  
<% end %>
          
  <hr>

  <table class="table table-hover">
    <thead>
      <tr>
        <th><strong class='titleTable'>Nome</strong></th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @sivic_discipulos.each do |sivic_discipulo| %>
        <tr>
          <td><%= sivic_discipulo.sivic_pessoa.nome_pessoa %></td>
        <td align='right'>
            <%= link_to usuariospermissoes_path(sivic_discipulo.sivic_pessoa.id), :class => "btn btn-default btn-sm", :rel=>"tooltip", :title=>"Permissões" do %>
              <span class="glyphicon glyphicon-user"></span> 
            <% end %>             
        </td> 
                  
        </tr>
      <% end %>
    </tbody>
  </table>

<div class="apple_pagination">
<%= will_paginate @sivic_discipulo %>
</div>

</div></div>



<script>
jQuery(function($){
  $('#q').focus();
});  


$(function(){
  $("a[rel='tooltip']").tooltip();
})

</script>
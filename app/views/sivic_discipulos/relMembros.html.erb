<%=render '/layouts/panel' %>

<%= form_tag nil, method: 'GET' do %>
    <div class="row mar-bot40">
      <%=fields_for :sivic_situaco do |sit| %>
        <div class="col-lg-2" >
          <%= sit.label :Situação %>
          <%= sit.select :sivic_estado_id, options_from_collection_for_select(SivicSituacaodiscipulo.all, 'id', 'nome_situacao'),{:include_blank => true}, :class =>  'form-control'%>
        </div>

        <div class="col-lg-2" >
          <%= sit.label :Sexo %>
          <%= sit.collection_select :DESC_Sexo, SivicDiscipulo::SEXO, :to_s, :humanize,{:include_blank => true},{ :class => 'form-control' }%>
        </div>

        <div class="col-lg-2">
          <%= sit.label :Estado_Civil %>
          <%= sit.collection_select :DESC_EstadoCivil, SivicDiscipulo::ESTADOCIVIL, :to_s, :humanize, {:include_blank => true}, {:class => "form-control"}%>
        </div>   
        <div class="col-lg-2">
        <%= sit.label :Ministerio %>
        <%= sit.select :sivic_ministerio_id, options_from_collection_for_select(SivicMinisterio.where(sivic_igreja_id: current_user.sivic_pessoa.sivic_igreja_id), 'id', 'nome_ministerio'),{:include_blank => true}, :class =>  'form-control'%> 
        </div>  

        <div class="col-lg-2" >
          <div class="checkbox">
            <label>
              <input type="checkbox" value="convertido"> Novo Convertido
            </label>          
            <label>
              <input type="checkbox" value="discipulo"> Discípulo
            </label>
            <label>
              <input type="checkbox" value="discipulador"> Discipulador
            </label>
            <label>
              <input type="checkbox" value="consolidador"> Consolidador
            </label>
            <label>
              <input type="checkbox" value="batizado"> Batizado
            </label>            
          </div>              
        </div>

    </div>
<%end%> 

<% end %>


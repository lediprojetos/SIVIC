<% content_for :titlePage do %>
  Listar Discípulos
<% end %>


<%=render '/layouts/panel' %>

<%= form_tag nil, method: 'GET' do %>
  <label >Nome</label>
  <input name="q" type="text" class="form-control" placeholder="Nome do Discípulo" style="width: 20%;">
  <%= submit_tag 'Buscar', class: 'btn btn-info', style: "margin-bottom: 10px;" %>
<% end %>
          

  <hr>

<div class="containermininmo">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><strong class='titleTable'>Nome</strong></th>
        <th><strong class='titleTable'>Data de Nascimento</strong></th>
        <th><strong class='titleTable'>CPF</strong></th>
        <th><strong class='titleTable'>Data batismo</strong></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @sivic_discipulos.each do |sivic_discipulo| %>
        <tr>
          <td><%= sivic_discipulo.sivic_pessoa.NOME_pessoa %></td>
          <td><%= sivic_discipulo.DATA_Nascimento.blank? ? '' : sivic_discipulo.DATA_Nascimento.strftime("%d/%m/%Y")  %></td>
          <td><%= sivic_discipulo.NUMR_CPF %></td>
          <td><%= sivic_discipulo.DATA_Batismo %></td>
          <td><%= link_to image_tag('show.png', :title => 'Exibir', class: 'exibirico') , sivic_discipulo %></td>
          <td><%= link_to image_tag('edit.png', :title => 'Editar',  class: 'exibirico') , edit_sivic_discipulo_path(sivic_discipulo) %></td>
          <td><%= link_to image_tag('flux.png', :title => 'Diagrama',  class: 'exibirico') , relDiscipulos_path(sivic_discipulo) %></td>
          <td><%= link_to image_tag('rel.png', :title => 'Relatório de Geração',  class: 'exibirico') , relGeracoes_path(sivic_discipulo) %></td>
          <td><%= link_to image_tag('trash.png', :title => 'Excluir',  class: 'exibirico'), sivic_discipulo , :method => :delete,  :confirm => 'Deseja excluir o registro?'%></td>
                  
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<div class="apple_pagination">
<%= will_paginate @sivic_discipulos %>
</div>
</div></div>

<div class="btn-group">
  <%= link_to new_sivic_discipulo_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-file"></span> Novo
  <% end %>
</div>


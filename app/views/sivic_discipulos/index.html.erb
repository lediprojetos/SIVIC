<h1>Listar Discípulos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Data de Nascimento</th>
      <th>CPF</th>
      <th>Data batismo</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sivic_discipulos.each do |sivic_discipulo| %>
      <tr>
        <td><%= sivic_discipulo.sivic_pessoa.NOME_pessoa %></td>
        <td><%= sivic_discipulo.DATA_Nascimento %></td>
        <td><%= sivic_discipulo.NUMR_CPF %></td>
        <td><%= sivic_discipulo.DATA_Batismo %></td>
        <td><%= link_to 'Exibir', sivic_discipulo %></td>
        <td><%= link_to 'Editar', edit_sivic_discipulo_path(sivic_discipulo) %></td>
        <td><%= link_to 'Excluir', sivic_discipulo, method: :delete, data: { confirm: 'Deseja excluir o registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


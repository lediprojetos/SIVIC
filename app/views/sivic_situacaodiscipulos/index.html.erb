<% content_for :titlePage do %>
  Situações de Discípulos
<% end %>

<%=render '/layouts/panel' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Sivic igrejas</th>
      <th>User</th>
      <th>User</th>
      <th>Nome situacao</th>
      <th>Data exclusao</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sivic_situacaodiscipulos.each do |sivic_situacaodiscipulo| %>
      <tr>
        <td><%= sivic_situacaodiscipulo.sivic_igreja.NOME_igreja %></td>
        <td><%= sivic_situacaodiscipulo.user_inclusao %></td>
        <td><%= sivic_situacaodiscipulo.user_exclusao %></td>
        <td><%= sivic_situacaodiscipulo.nome_situacao %></td>
        <td><%= sivic_situacaodiscipulo.data_exclusao %></td>

        <td align='right'>
            <%= link_to sivic_situacaodiscipulo, :class => "btn btn-default btn-sm", :rel=>"tooltip", :title=>"Exibir" do %>
              <span class="glyphicon glyphicon-list-alt"></span>
            <% end %>             
            <%= link_to edit_sivic_situacaodiscipulo_path(sivic_situacaodiscipulo), :class => "btn btn-default btn-sm", :rel=>"tooltip", :title=>"Editar" do %>
              <span class="glyphicon glyphicon-pencil"></span>
            <% end %>             

            <a class="btn btn-default btn-sm" title="" rel="tooltip" href="/sivic_situacaodiscipulos/<%=sivic_situacaodiscipulo.id%>  "data-method="delete" data-confirm="Deseja excluir o registro?" data-original-title="Excluir">
                <span class="glyphicon glyphicon-trash" rel="tooltip"></span>
            </a>   

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div></div>
<div class="btn-group">
  <%= link_to new_sivic_situacaodiscipulo_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-file"></span> Novo
  <% end %>
</div>
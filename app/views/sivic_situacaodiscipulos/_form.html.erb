<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= 'Cadastro de DiscÃ­pulos'%></h3>
  </div>
  <div class="panel-footer">

  <%= form_for(@sivic_situacaodiscipulo) do |f| %>
    <% if @sivic_situacaodiscipulo.errors.any? %>
      <div class="alert alert-danger" role="alert">
      <% if @sivic_situacaodiscipulo.errors.any? %>
          <% @sivic_situacaodiscipulo.errors.full_messages.each do |msg| %>
            <%= msg %></br>       
          <% end %>
      <% end %>
     </div>
   <%end%>

  <div class="row mar-bot40">
    <div class="col-lg-4" >
    </div>
      
    <div class="col-lg-4" >
      <div class="field">
        <%= f.label :Situacao %><br>
        <%= f.text_field :nome_situacao, :class => 'form-control' %>
      </div>
    </div>    

    <div class="col-lg-4" >
    </div>

  </div>

    <%= f.hidden_field :sivic_igreja_id, :value => current_user.sivic_pessoa.sivic_igreja_id %>
    <%= f.hidden_field :user_inclusao, :value => current_user.id %>

  </div>
</div>


<div class="btn-group">

  <button type="submit" class="btn btn-default btn">
    <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
  </button>

  <%= yield(:iconexibir) %>

  <%= link_to sivic_situacaodiscipulos_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>

</div>

<% end %>
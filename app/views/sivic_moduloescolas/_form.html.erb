<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= 'Cadastro de Disciplina'%></h3>
  </div>
  <div class="panel-footer">

  <%= form_for(@sivic_moduloescola) do |f| %>
    <% if @sivic_moduloescola.errors.any? %>
     <div class="alert alert-danger alert-dismissible fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <% if @sivic_moduloescola.errors.any? %>
  
            <% @sivic_moduloescola.errors.full_messages.each do |msg| %>

          <%= msg %></br>
        <% end %>
      <% end %>
      </div>
    <% end %>

  <div class="row">
  <div class="col-xs-3">
  </div>  
  <div class="col-xs-6">
    <%= f.label :nome_Disciplina %><br>
    <%= f.text_field :nome_modulo, :class =>  'form-control' %>
  </div>
  </div>
  
    <!--Capturando dados automaticos-->
 <%=f.hidden_field :sivic_igreja_id, :value => current_user.sivic_pessoa.sivic_igreja_id%>  
 <%=f.hidden_field :user_inclusao, :value => current_user.id%>
   

  </div>
</div>

  <div class="btn-group">
  <button type="submit" class="btn btn-default btn">
    <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
  </button>

  <%= yield(:iconexibir) %>

  <%= link_to sivic_moduloescolas_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>
</div>

<% end %>

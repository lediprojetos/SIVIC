<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= 'Cadastro de Centro de Custo'%></h3>
  </div>
  <div class="panel-footer">

<%= form_for(@sivic_centrocusto) do |f| %>
  <% if @sivic_centrocusto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sivic_centrocusto.errors.count, "error") %> prohibited this sivic_centrocusto from being saved:</h2>

      <ul>
      <% @sivic_centrocusto.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
      <div class="col-xs-3">
      </div>

      <div class="col-xs-6">
        <%= f.label :nome  %><br>
        <%= f.text_field :nome_centrocusto, :class =>  'form-control' %>
      </div>
  </div>
</br>
<div class="row">
      <div class="col-xs-3">
      </div>
      
      <div class="col-xs-6">      
          <%= f.label :Descrição %><br>
          <%= f.text_area :desc_centrocusto, :class =>  'form-control' %>
      </div>

</div>
</br>
   
       <!--Capturando igreja do usuaário logado -->
    <%= f.hidden_field :sivic_igreja_id, :value => current_user.sivic_pessoa.sivic_igreja_id %>
    <!--Capturando Usuário logado --> 
    <%= f.hidden_field :user_id, :value => current_user.id%> 

    </div>
</div>

<div class="btn-group">
  <button type="submit" class="btn btn-default btn">
    <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
  </button>

  <%= yield(:iconexibir) %>

  <%= link_to sivic_centrocustos_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>
</div>


<% end %>

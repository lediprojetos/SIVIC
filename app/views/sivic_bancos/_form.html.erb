<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= 'Cadastro de Bancos'%></h3>
  </div>
  <div class="panel-footer">
<%= form_for(@sivic_banco) do |f| %>
  <% if @sivic_banco.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sivic_banco.errors.count, "error") %> prohibited this sivic_banco from being saved:</h2>

      <ul>
      <% @sivic_banco.errors.full_messages.each do |msg| %>

  </button>

  <%= yield(:iconexibir) %>

  <%= link_to sivic_bancos_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>

</div>


<% end %>

<%= form_for(@sivic_evento) do |f| %>
  <% if @sivic_evento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sivic_evento.errors.count, "error") %> prohibited this sivic_evento from being saved:</h2>

      <ul>
      <% @sivic_evento.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.fields_for :sivic_tipoEvento do |tipoEvento| %>
  <div class="field">
    <%= tipoEvento.label :Tipo_do_Evento %><br>
    <%= tipoEvento.select :sivic_tipoEvento_id, options_from_collection_for_select(SivicTipoEvento.all, 'id', 'desc_tipoevento',@sivic_tipo_eventos),:include_blank => true%>
  </div>
  <%end%>

  <div class="field">
    <%= f.label :Evento %><br>
    <%= f.text_field :DESC_evento %>
  </div>
  <div class="field">
    <%= f.label :Resumo %><br>
    <%= f.text_area :DESC_resumo %>
  </div>
  <div class="field">
    <%= f.label :Valor_inscricao %><br>
    <%= f.text_field :VARL_inscricao %>
  </div>
  <div class="field">
    <%= f.label :DATA_inicio %><br>
    <%= f.text_field :DATA_inicio %>
  </div>  
  <div class="field">
    <%= f.label :DATA_fim %><br>
    <%= f.text_field :DATA_fim %>
  </div>
  <div class="field">
    <%= f.label :Vagas_limitado %><br>
    <%= f.number_field :FLAG_ilimitado %>
  </div>
  <div class="field">
    <%= f.label :Qtd_Vagas %><br>
    <%= f.number_field :NUMR_qdtVagas %>
  </div>
  <div class="field">
    <%= f.label :sivic_igreja_id %><br>
    <%= f.text_field :sivic_igreja_id %>
  </div>
 
  
  <legend>Endereço</legend>


  <%=  f.fields_for :sivic_endereco do |endereco| %>
  <div class="field">
    <%= endereco.label :Bairro %><br>
    <%= endereco.text_field :DESC_Bairro %>
  </div>
  <div class="field">
    <%= endereco.label :Rua %><br>
    <%= endereco.text_field :DESC_Rua %>
  </div>
  <div class="field">
    <%= endereco.label :Complemento %><br>
    <%= endereco.text_field :DESC_Complemento %>
  </div>
  <div class="field">
    <%= endereco.label :Ponto_referência %><br>
    <%= endereco.text_field :DESC_Pontoreferencia %>
  </div>
  <div class="field">
    <%= endereco.label :CEP.capitalize %><br>
    <%= endereco.number_field :NUMR_Cep %>
  </div>

  <%=  f.fields_for :sivic_estado do |estado| %>
  <div class="field">
    <%= estado.label :Estado %><br>
    <%= estado.select :sivic_estado_id, options_from_collection_for_select(SivicEstado.all, 'id', 'nome_estado',@sivic_estado), {:include_blank => true}, {:onchange => 'changeState(this)',}%>
  </div>
  <%end%>

  <%if @sivic_cidade %>

    <div class="field">
      <%= endereco.label :Cidade %><br>
      <%= endereco.select :sivic_cidade_id, options_from_collection_for_select(@sivic_cidade, 'id', 'nome_cidade',@sivic_cidade_setada)%>
    </div>

  <%else%>

    <div class="field">
      <%= endereco.label :Cidade   %><br>
      <%= endereco.select :sivic_cidade_id, [] %><br>
    </div> 

  <%end%>

  <% end %>
</fieldset>

  <!--Capturando Usuario Logado-->
  <% if user_signed_in? %>
  <%=@sivic_evento_sivic_user_id = current_user.id %>
  <%end%>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script>
  function changeState(state){
      $.ajax({
        url: '<%= listarCidade_path %>',
        data : {id : state.value},
        success: function(data){
          $('#sivic_evento_sivic_endereco_attributes_sivic_cidade_id').empty();
          $('#sivic_evento_sivic_endereco_attributes_sivic_cidade_id').html('<option>Carregando...</option>');
          $('#sivic_evento_sivic_endereco_attributes_sivic_cidade_id').attr('disabled', 'disabled');
          var options = "";
          for (var i in data) {
            var item = data[i];
            options += "<option value='"+item.id+"'>"+item.name+"</option>"
          };
 
          $('#sivic_evento_sivic_endereco_attributes_sivic_cidade_id').html(options);
          $('#sivic_evento_sivic_endereco_attributes_sivic_cidade_id').removeAttr('disabled');          
        }
      })
    }
</script>
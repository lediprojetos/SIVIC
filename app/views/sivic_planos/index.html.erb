<% content_for :titlePage do %>
  Lista de Planos
<% end %>

<%=render '/layouts/panel' %>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome plano</th>
      <th>Qtd. Membros</th>
      <th>Qtd. Usu√°rios</th>
      <th></th>

    </tr>
  </thead>

  <tbody>
    <% @sivic_planos.each do |sivic_plano| %>
      <tr>
        <td><%= sivic_plano.nome_plano %></td>
        <td><%= sivic_plano.numr_qtdmembro %></td>
        <td><%= sivic_plano.numr_qtdusuario %></td>

        <td align='right'>   

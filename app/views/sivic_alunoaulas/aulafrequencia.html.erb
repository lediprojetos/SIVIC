<% content_for :titlePage do %>
  Aulas 
<% end %>

<%=render '/layouts/panel' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Aula</th>
      <th>Data Aula</th>
    </tr>
  </thead>
  <tbody>
    <% @sivic_aulas.each do |sivic_aula| %>
      <tr>
        <td><%= sivic_aula.nome_aula %></td>
        <td><%= sivic_aula.data_aula.blank? ? '' : sivic_aula.data_aula.strftime("%d/%m/%Y") %></td>
        <td align='right'>
          <%= link_to frequencia_sivic_alunoaula_path(sivic_aula), :class => "btn btn-default btn-sm", :rel=>"tooltip", :title=>"Selecionar Aula" do %>
            <span class="glyphicon glyphicon-chevron-right"></span>
          <% end %>                 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div></div>

<div class="btn-group">
  <%= link_to sivic_alunoaulas_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>
</div>




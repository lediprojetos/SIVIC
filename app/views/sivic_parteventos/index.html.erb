<% content_for :titlePage do %>
  Lista de Inscrições
<% end %>

<%=render '/layouts/panel' %>

<div class="containermininmo">

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Evento</th>
      <th>Valor Pago</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @sivic_parteventos.each do |sivic_partevento| %>
      <tr>
        <td><%= sivic_partevento.sivic_pessoa.nome_pessoa %></td>
        <td><%= sivic_partevento.sivic_evento.DESC_evento %></td>
        <td><%= number_to_currency(sivic_partevento.sivic_movimentofinanceiro.VALR_movimento, unit: "R$", separator: ",", delimiter: "") %></td>
        <td align='right'>         
        <div class="btn-group">
          <%= link_to sivic_partevento, :class => "btn btn-default btn-sm" do %>
            <span class="glyphicon glyphicon-list-alt"></span> Exibir
          <% end %>             
          <%= link_to edit_sivic_partevento_path(sivic_partevento), :class => "btn btn-default btn-sm" do %>
            <span class="glyphicon glyphicon-pencil"></span> Editar
          <% end %>
          <%= link_to pEventos_path(sivic_partevento), :confirm => 'Tem ceteza que está pessoa não participou?', :class => "btn btn-default btn-sm" do %>
              <span class="glyphicon glyphicon-remove-circle"></span> Não foi
            <% end %>              
           <%= link_to sivic_partevento , :method => :delete,  :confirm => 'Deseja excluir o registro?', :class => "btn btn-default btn-sm" do %>
              <span class="glyphicon glyphicon-trash"></span> Excluir
            <% end %> 
        </div>         
      </tr>
    <% end %>
  </tbody>

</table>

</div>


<div class="apple_pagination">
<%= will_paginate @sivic_eventos %>
</div>

</div></div>
<div class="btn-group">
  <%= link_to new_sivic_partevento_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-file"></span> Novo
  <% end %>
</div>



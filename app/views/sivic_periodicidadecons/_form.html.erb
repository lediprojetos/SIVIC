<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= 'Cadastro de Periodicidade'%></h3>
  </div>
  <div class="panel-footer">

  <%= form_for(@sivic_periodicidadecon) do |f| %>
    <% if  @sivic_periodicidadecon.errors.any? %>  
      <div class="alert alert-danger alert-dismissible fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>

        <% if @sivic_periodicidadecon.errors.any? %>
  
            <% @sivic_periodicidadecon.errors.full_messages.each do |msg| %>

          <%= msg %></br>
        <% end %>
      <% end %>
      </div>
    <% end %>


<div class="row mar-bot40">
      <div class="col-lg-3">
      </div>
      <div class="col-lg-4">
        <%= f.label :Descrição %><br>
        <%= f.text_field :desc_periodicidade, :class => "form-control" %>
      </div>
      <div class="col-lg-2">
        <%= f.label :Qtd_Dias %><br>
        <%= f.number_field :numr_qtddia, :class => "form-control" %>
      </div>    
</div>

<br>
   <%=f.hidden_field :sivic_igreja_id , :value => current_user.sivic_pessoa.sivic_igreja_id %>

   </div>
  </div>



  <div class="btn-group">
  <button type="submit" class="btn btn-default btn">
    <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
  </button>

  <%= yield(:iconexibir) %>

  <%= link_to sivic_periodicidadecons_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>
</div>

<% end %>



<!-- Troca Igreja -->
<div class="modal fade" id="myModalTransfer" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span></button>
        <h4 class="modal-title" id="myModalLabel">Navegar Entre Igrejas</h4>
      </div>
      <div class="modal-body">
        <div class="row">     

          <div class="col-xs-12">
              <label>Igreja</label>
              <%=  fields_for :trocaigreja do |f| %>
                <%= f.select :sivic_igreja_id, options_from_collection_for_select(SivicIgreja.all, 'id', 'NOME_igreja'),{:include_blank => true},{ :class =>  'form-control'}%>
              <% end %>          
          </div>           

        </div>      
      

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
        <button id="bntSalvar" type="button" class="btn btn-primary" onclick="salvarigreja();">Salvar</button>
      </div>
    </div>
  </div>
</div>

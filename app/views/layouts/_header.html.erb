<script>

  function salvarigreja(){


      $.ajax({
        url: '<%= trocarigreja_path %>',
        data : {

          id : $('#trocaigreja_sivic_igreja_id').val()

        },
        success: function(data){

          location.reload();
          
        }
      })
    }

</script>
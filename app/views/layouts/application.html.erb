

      <% if request.original_fullpath == '/' %>

        <%= render 'layouts/header2' %>

      <%else%>


        <!DOCTYPE html>
        <html>
          <head>
            <title><%= full_title(yield(:title)) %></title>
            <%= stylesheet_link_tag "application-all", media: "all", "data-turbolinks-track" => true %>
            <%= javascript_include_tag "application-all", "data-turbolinks-track" => true %>
            <%= csrf_meta_tags %>
            <%= render 'layouts/shim' %>
          </head>
          <body>

          <% if request.original_fullpath != '/users/sign_in' %>
            <%= render 'layouts/header' %>
          <%end%>

          <%= yield %>
          
          <% if request.original_fullpath != '/users/sign_in' %>
            <%= render 'layouts/footer' %>
          <%end%>

          </body>
        </html>
      <%end%>


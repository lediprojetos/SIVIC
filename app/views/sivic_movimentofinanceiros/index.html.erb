<% content_for :titlePage do %>
  Lançamentos
<% end %>

<%=render '/layouts/panel' %>

<div class="containermininmo">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Tipo do Movimento</th>
      <th>Valor R$</th>    
      <th>Descrição</th>
      <th>Dado baixa</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sivic_movimentofinanceiros.each do |sivic_movimentofinanceiro| %>
      <tr>
        <td><%= sivic_movimentofinanceiro.sivic_tipmovfinanceiro.DESC_movimento %></td>
        <td><%= number_to_currency(sivic_movimentofinanceiro.VALR_movimento, unit: "R$", separator: ",", delimiter: "") %></td>
        <td><%= sivic_movimentofinanceiro.DESC_movimento %></td>
        <td><%= sivic_movimentofinanceiro.FLAG_baixa %></td>
        
        <td align='right'>             
            <%= link_to sivic_movimentofinanceiro , :class => "btn btn-default btn-sm", :rel=>"tooltip", :title=>"Exibir" do %>
            <span class="glyphicon glyphicon-list-alt"></span>
        <% end %>             
        
        <%= link_to edit_sivic_movimentofinanceiro_path(sivic_movimentofinanceiro), :class => "btn btn-default btn-sm", :rel=>"tooltip", :title=>"Editar" do %>
            <span class="glyphicon glyphicon-pencil"></span>
        <% end %>

        <a class="btn btn-default btn-sm" title="" rel="tooltip" href="/sivic_movimentofinanceiros/<%=sivic_movimentofinanceiro.id%>" data-method="delete" data-confirm="Deseja  excluir o registro?" data-original-title="Excluir">
                <span class="glyphicon glyphicon-trash" rel="tooltip"></span>
        </a>

      </tr>
    <% end %>
  </tbody>
</table>

</div>

<div class="apple_pagination">
<%= will_paginate @sivic_users %>
</div>

</div></div>

<div class="btn-group">
  <%= link_to new_sivic_movimentofinanceiro_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-file"></span> Novo
  <% end %>
</div>


<script>

$(function(){
  $("a[rel='tooltip']").tooltip();
})

</script>
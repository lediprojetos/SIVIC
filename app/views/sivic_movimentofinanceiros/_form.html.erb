<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= 'Cadastro movimento Financeiro'%></h3>
  </div>
  <div class="panel-footer">

  <%= form_for(@sivic_movimentofinanceiro) do |f| %>
    <% if @sivic_movimentofinanceiro.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <% if @sivic_movimentofinanceiro.errors.any? %>
  
            <% @sivic_movimentofinanceiro.errors.full_messages.each do |msg| %>

          <%= msg %></br>
        <% end %>
      <% end %>
      </div>
    <% end %>
      
  <div class="row">
          <div class="col-xs-1">
          </div>
          <div class="col-xs-4">
            <%= f.label :Evento %>
            <%= f.select :sivic_evento_id, options_from_collection_for_select(SivicEvento.all, 'id', 'desc_evento',@sivic_movimentofinanceiro.sivic_evento_id), {:include_blank => true},{:class => 'form-control'}%>
          </div>
          <div class="col-xs-4">
            <%= f.label :Tipo_Movimento %>
            <%= f.select :sivic_tipmovfinanceiro_id, options_from_collection_for_select(SivicTipmovfinanceiro.all, 'id', 'DESC_movimento',@sivic_movimentofinanceiro.sivic_tipmovfinanceiro_id),{:include_blank => true}, {:class => 'form-control'}%>
          </div>
          <div class="col-xs-2">
            <%= f.label :Valor %>
            <%= f.text_field :VALR_movimento, :class => 'form-control' %>
        </div>
  </div>
  <br>
  <div class="row">
        <div class="col-xs-1">
        </div>
        <div class="col-xs-4">
            <%= f.label :DescricÃ£o_Movimento %>
            <%= f.text_area :DESC_movimento, :class => 'form-control' %>
        </div>

  </div>
      
   <!--Capturando Usuario logado-->
   <%=f.hidden_field :user_inclusao, :value => current_user.id%>  
    
    </br>
      
    </div>
  </div>

<div class="btn-group">
  <button type="submit" class="btn btn-default btn">
    <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
  </button>

  <%= yield(:iconexibir) %>

  <%= link_to sivic_movimentofinanceiros_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>
</div>

<% end %>



<script>
  
  $(function() {
    $("#valr_lancamento").maskMoney({showSymbol:true, symbol:"R$", decimal:",", thousands:"."});
  }

</script>
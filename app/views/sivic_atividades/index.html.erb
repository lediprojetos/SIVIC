<% content_for :titlePage do %>
 <div center> Lista de Atividades</div>
<% end %>

<%=render '/layouts/panel' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome Atividade</th>
      <th>Periodicidade</th>
      <th>Data Bloqueio</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sivic_atividades.each do |sivic_atividade| %>
      <tr>
        <td><%= sivic_atividade.nome_atividade %></td>
        <td><%= sivic_atividade.sivic_periodicidadecon.desc_periodicidade %></td>
        <td><%= sivic_atividade.data_bloqueio %></td>  
        <td align='right'>   
          <%= link_to sivic_atividade, :class => "btn btn-default btn-sm", :rel=>"tooltip", :title=>"Exibir" do %>
            <span class="glyphicon glyphicon-list-alt"></span>
          <% end %>             
          <%= link_to edit_sivic_atividade_path(sivic_atividade), :class => "btn btn-default btn-sm", :rel=>"tooltip", :title=>"Editar" do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
                      
           <%= link_to deleta_atividade_sivic_atividade_path(sivic_atividade), :confirm => 'Deseja excluir o discipulo?', :class => "btn btn-default btn-sm" , :rel=>"tooltip", :title=>"Excluir" do %>
                <span class="glyphicon glyphicon-trash"></span> 
              <% end %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div></div>
<div class="btn-group">
  <%= link_to new_sivic_atividade_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-file"></span> Novo
  <% end %>
</div>



<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= 'Cadastro de Atividades'%></h3>
  </div>
  <div class="panel-footer">

<%= form_for(@sivic_atividade) do |f| %>
  <% if @sivic_atividade.errors.any? %>
      
      <div class="alert alert-danger alert-dismissible fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>

      <h2><%= pluralize(@sivic_atividade.errors.count, "error") %> prohibited this sivic_atividade from being saved:</h2>

      <ul>
      <% @sivic_atividade.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="row mar-bot40">
   
   <div div class="col-lg-2">
   </div>

   <div div class="col-lg-4">
      <%= f.label :nome_atividade %><br>
      <%= f.text_field :nome_atividade, :class => "form-control"  %>
    </div>

    <div div class="col-lg-4">
    <%= f.label :Periodicidade %><br>
    <%= f.text_field :sivic_periodicidadeconso_id, :class => "form-control"  %>


    <%= f.label :Periodicidade %>
    <%= f.select :sivic_periodicidadeconso_id, options_from_collection_for_select(SivicPeriodicidadecons.where(:sivic_igreja_id => current_user.sivic_pessoa.sivic_igreja_id), 'id', 'desc_periodicidade',@sivic_atividade.sivic_periodicidadeconso_id),{}, :class =>  'form-control'%>


   </div>



  </div>
 
  <br>
 
 <div class="row">

   <div div class="col-lg-2">
   </div>

  <div div class="col-lg-8">
        <%= f.label :descrição_atividade %><br>
        <%= f.text_area :desc_atividade, :class => "form-control" %>
      </div>
   </div>

     
   <%=f.hidden_field :sivic_igreja_id , :value => current_user.sivic_pessoa.sivic_igreja_id %>
   <%=f.hidden_field :user_inclusao, :value => current_user.id%>  

<br>
    </div>
  </div>

<div class="btn-group">
  <button type="submit" class="btn btn-default btn">
    <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
  </button>

  <%= yield(:iconexibir) %>

  <%= link_to sivic_atividades_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>
</div>



<% end %>



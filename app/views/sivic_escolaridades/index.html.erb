<% content_for :titlePage do %>
  Listar Escolaridades
<% end %>

<%=render '/layouts/panel' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome escolaridade</th>
      <th style='width:500px;'></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sivic_escolaridades.each do |sivic_escolaridade| %>
      <tr>
        <td><%= sivic_escolaridade.NOME_escolaridade %></td>
        <td></td>

        <td align='right'>
          <div class="btn-group">
            <%= link_to sivic_escolaridade, :class => "btn btn-default btn-sm" do %>
              <span class="glyphicon glyphicon-list-alt"></span> Exibir
            <% end %>             
            <%= link_to edit_sivic_escolaridade_path(sivic_escolaridade), :class => "btn btn-default btn-sm" do %>
              <span class="glyphicon glyphicon-pencil"></span> Editar
            <% end %>             
            <%= link_to sivic_escolaridade , :method => :delete,  :confirm => 'Deseja excluir o registro?', :class => "btn btn-default btn-sm" do %>
              <span class="glyphicon glyphicon-trash"></span> Excluir
            <% end %>
        </div>

      </tr>
    <% end %>
  </tbody>
</table>

<div class="apple_pagination">
<%= will_paginate @sivic_escolaridades %>
</div>

</div></div>
<div class="btn-group">
  <%= link_to new_sivic_escolaridade_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-file"></span> Novo
  <% end %>
</div>


<% content_for :titlePage do %>
  Lista de Pessoas
<% end %>

<%=render '/layouts/panel' %>

<div class="containermininmo">
<table class="table table-hover">
  <thead>
    <tr align="center">
      <th><strong class='titleTable'>Nome</strong></th>
      <th><strong class='titleTable'>Email</strong></th>
      <th><strong class='titleTable'>Observacao</strong></th>
      <th><strong class='titleTable'>Lider</strong></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sivic_pessoas.each do |sivic_pessoa| %>
      <tr>
        <td><%= sivic_pessoa.NOME_pessoa %></td>
        <td><%= sivic_pessoa.DESC_email %></td>
        <td><%= sivic_pessoa.DESC_observacao %></td>
          <% @lider = sivic_pessoa.father %>
          <% if @lider != nil %>
            <td><%= sivic_pessoa.father.NOME_pessoa%></td>
          <%else%>
            <td><%= nil%></td>
          <%end%>
            <td><%= link_to image_tag('show.png', :title => 'Exibir', class: 'exibirico') , sivic_pessoa %></td>
            <td><%= link_to image_tag('edit.png', :title => 'Editar',  class: 'exibirico') , edit_sivic_pessoa_path(sivic_pessoa) %></td>
            <td><%= link_to image_tag('trash.png', :title => 'Excluir',  class: 'exibirico'), sivic_pessoa , :method => :delete,  :confirm => 'Deseja excluir o registro?'%></td>        
      </tr>
    <% end %>
  </tbody>
</table>


</div>
<div class="apple_pagination">
<%= will_paginate @sivic_pessoas %>
</div>
</div></div>

<table style="margin-top:10px;">
  <tr>
    <td align="center" style="width:50px;">
      <%= link_to image_tag('new.png', :title => 'Novo', class: 'exibirico') , new_sivic_pessoa_path %>
    </td>
  </tr>
  <tr>
    <td align="center" style="width:20px;">
      <label class="altBotoes">Novo</label>
    </td>
  </tr> 
</table>
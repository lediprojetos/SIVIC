<div class="titulos">
  <h4 style="padding-top:5px;">Lista de Pessoas</h4>
</div>

<div class="containermininmo">
<table class="table table-hover">
  <thead>
    <tr align="center">
      <th><strong class='titleTable'>Nome</strong></th>
      <th><strong class='titleTable'>Email</strong></th>
      <th><strong class='titleTable'>Observacao</strong></th>
      <th><strong class='titleTable'>Lider</strong></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sivic_pessoas.each do |sivic_pessoa| %>
      <tr>
        <td><%= sivic_pessoa.NOME_pessoa %></td>
        <td><%= sivic_pessoa.DESC_email %></td>
        <td><%= sivic_pessoa.DESC_observacao %></td>
          <% @lider = sivic_pessoa.father %>
          <% if @lider != nil %>
            <td><%= sivic_pessoa.father.NOME_pessoa%></td>
          <%else%>
            <td><%= nil%></td>
          <%end%>
        <%#= link_to 'Exibir', sivic_pessoa %>
        <td><%= link_to image_tag('folder_blue_open.png', :title => 'Exibir') , sivic_pessoa %></td>
        <%#= link_to 'Editar', edit_sivic_pessoa_path(sivic_pessoa) %>
        <td><%= link_to image_tag('edit.png', :title => 'Editar') , edit_sivic_pessoa_path(sivic_pessoa) %></td>
        <%#= link_to 'Excluir', sivic_pessoa, method: :delete, data: { confirm: 'Deseja excluir o registro?' } %>
        <%#= link_to image_tag('trash.png', data: { confirm: 'Deseja excluir o registro?' })%>
        <td><%= link_to image_tag('trash.png', :title => 'Excluir'), sivic_pessoa , :method => :delete,  :confirm => 'Deseja excluir o registro?'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>

<table style="margin-top:10px;">
  <tr>
    <td align="center" style="width:50px;">
      <%= link_to image_tag('folder_new.png', :title => 'Novo') , new_sivic_pessoa_path %>
    </td>
  </tr>
  <tr>
    <td align="center" style="width:20px;">
      <label class="altBotoes">Novo</label>
    </td>
  </tr> 
</table>
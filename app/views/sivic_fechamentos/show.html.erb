<p id="notice"><%= notice %></p>

<% content_for :titlePage do %>
  Exibir Fechamento
<% end %>

<%= render 'layouts/panel' %>

<p>
  <strong>Descrição:</strong>
  <%= @sivic_fechamento.desc_fechamento %>
</p>

<p>
  <strong>Valor:</strong>
  <%= number_to_currency(@sivic_fechamento.valr_fechamento, unit: "R$", separator: ",", delimiter: ".")%>
</p>

<p>
  <strong>Tipo:</strong>
  <%= @sivic_fechamento.tipo_fechamento = 1 ? 'Mensal' : 'Extraordinario' %>
</p>

<p>
  <strong>Data fechamento:</strong>
  <%=@sivic_fechamento.data_fechamento.blank? ? '' : @sivic_fechamento.data_fechamento.strftime("%d/%m/%Y") %>
</p>

<p>
  <strong>Data exclusao:</strong>
  <%= @sivic_fechamento.data_exclusao %>
</p>

<p>
  <strong>Usuário Inclusão:</strong>
  <%= @sivic_fechamento.inclusao.sivic_pessoa.nome_pessoa %>
</p>

<p>
  <strong>Usuário Inclusão:</strong>
  <%= @sivic_fechamento.exclusao.sivic_pessoa.nome_pessoa rescue nil%>
</p>

</div>
</div>

<div class="btn-group">

  <%= link_to edit_sivic_fechamento_path(@sivic_fechamento), :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-pencil"></span> Editar
  <% end %>
  <%= link_to sivic_fechamentos_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>

</div>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= 'Fechamentos'%></h3>
  </div>
  <div class="panel-footer">
<%= form_for(@sivic_fechamento) do |f| %>
  <% if @sivic_fechamento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sivic_fechamento.errors.count, "error") %> prohibited this sivic_fechamento from being saved:</h2>

      <ul>
      <% @sivic_fechamento.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-xs-4">
    <%= f.label :Descrição %><br>
    <%= f.text_field :desc_fechamento, :class => 'form-control' %>
  </div>
  <div class="col-xs-2">
    <%= f.label :Valor %><br>
    <%= f.text_field :valr_fechamento, :value => number_to_currency(@sivic_fechamento.valr_fechamento, unit: "R$", separator: ",", delimiter: ".") , :class => 'form-control' %>
  </div>
  <div class="col-xs-3">
    <%= f.label :tipo_fechamento %><br>
    <%= f.select(:tipo_fechamento, [['MENSAL', 1], ['EXTRAORDINARIA', 2]], {:selected => @sivic_fechamento.tipo_fechamento}, {:class => 'form-control'}) %>
  </div>
  <div class="col-xs-3">
    <%= f.label :Data_Do_Fechamento %><br>
    <%= f.text_field :data_fechamento, :class => 'form-control', :value => @sivic_fechamento.data_fechamento.blank? ? '' : @sivic_fechamento.data_fechamento.strftime("%d/%m/%Y") %>
  </div>
  
</div>
</div>
</div>
<div class="btn-group">

  <button type="submit" class="btn btn-default btn">
    <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
  </button>

  <%= yield(:iconexibir) %>

  <%= link_to sivic_fechamentos_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>

</div>


<% end %>

<script>
$("#sivic_fechamento_valr_fechamento").maskMoney({showSymbol:true, symbol:"R$", decimal:",", thousands:"."});
$("#sivic_fechamento_data_fechamento").mask("99/99/9999");
</script>
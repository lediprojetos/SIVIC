  <%= form_for(@sivic_permissao) do |f| %>
    <% if @sivic_permissao.errors.any? %>
     <div class="alert alert-danger alert-dismissible fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <% if @sivic_permissao.errors.any? %>
  
            <% @sivic_permissao.errors.full_messages.each do |msg| %>

          <%= msg %></br>
        <% end %>
      <% end %>
      </div>
    <% end %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= 'Cadastro de Permissões'%></h3>
  </div>
  <div class="panel-footer">

  <div class="field">
    <%= f.label :Número_Ação %><br>
    <%= f.text_field :mumr_acao, :class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :Descrição %><br>
    <%= f.text_area :desc_permissao, :class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :sivic_model_id %><br>
    <%= f.select :sivic_model_id, options_from_collection_for_select(SivicModel.all, 'id', 'nome_model',@sivic_permissao.sivic_model_id), {}, {:class =>  'form-control'}%>    
  </div>  
</div>
</div>

<div class="btn-group">

  <button type="submit" class="btn btn-default btn">
    <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
  </button>

  <%= yield(:iconexibir) %>

  <%= link_to sivic_permissaos_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
  <% end %>

</div>
<% end %>
